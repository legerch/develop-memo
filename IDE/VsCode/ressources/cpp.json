    "Generate class source file for any C++ project": {
        "prefix": "file-class-source-cpp",
        "isFileTemplate": true,
        "description": "Generate ready to use class source file for any C++ project",
        "body": [
          "/******************************************************************************/",
          "/* Own header files                                                           */",
          "/******************************************************************************/",
          "#include \"${TM_FILENAME_BASE}.h\"",
          "",
          "/******************************************************************************/",
          "/* Standard headers                                                           */",
          "/******************************************************************************/",
          "",
          "/******************************************************************************/",
          "/* Other module header files                                                  */",
          "/******************************************************************************/",
          "",
          "/******************************************************************************/",
          "/* Private macro definitions                                                  */",
          "/******************************************************************************/",
          "",
          "/******************************************************************************/",
          "/* Class documentation                                                        */",
          "/******************************************************************************/",
          "",
          "/**",
          " * \\class       ${1:UNK}",
          " * \\brief       Class brief description",
          " * \\details",
          " * Class detailled description",
          "",
          " * \\author      Charlie LEGER",
          " * \\date        $CURRENT_DATE-$CURRENT_MONTH-$CURRENT_YEAR",
          " *",
          " * \\copyright   COPYRIGHT $CURRENT_YEAR - Borea DENTAL - All rights reserved",
          " */",
          "",
          "/******************************************************************************/",
          "/* Enum documentations                                                        */",
          "/******************************************************************************/",
          "",
          "/******************************************************************************/",
          "/* Structure documentations                                                   */",
          "/******************************************************************************/",
          "",
          "/******************************************************************************/",
          "/* Macro definitions                                                          */",
          "/******************************************************************************/",
          "",
          "/******************************************************************************/",
          "/* Start namespace                                                            */",
          "/******************************************************************************/",
          "",
          "/******************************************************************************/",
          "/* Functions implementations                                                  */",
          "/******************************************************************************/",
          "",
          "//TODO: doc",
          "${1:UNK}::${1:UNK}()",
          "{",
          "    /* Nothing to do */",
          "}",
          "",
          "${1:UNK}::~${1:UNK}()",
          "{",
          "    /* Nothing to do */",
          "}",
          "",
          "/******************************************************************************/",
          "/* End namespace                                                              */",
          "/******************************************************************************/",
          "",
          "/******************************************************************************/",
          "/* EOF                                                                        */",
          "/******************************************************************************/",
          ""
        ]
    }
}